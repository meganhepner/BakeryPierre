@model BakeryPierre.Models.Treat

@{
  Layout = "_Layout";
}

<h2>Edit this Treat : @Html.DisplayFor(model => model.TreatName)</h2>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)
  <div class="row">
    <div class="col-md-5 column">
      @Html.LabelFor(model => model.TreatName)<br>
    </div>
    <div class="col-md-5 column">
      @Html.EditorFor(model => model.TreatName, new {@class="form-control", required="required"})<br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 column">
      @Html.Label("Treat is available today :")<br>
    </div>
    <div class="col-md-5 column">
      @Html.CheckBoxFor(model => model.AvailableToday, true)<br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 column">
        @Html.LabelFor(model => model.Price)<br>
    </div>
    <div class="col-md-5 column">
        @Html.EditorFor(model => model.Price, new { @type = "number", step="any"})<br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 column">
      @Html.Label("Flavor profile of this treat ")<br>
    </div>
    <div class="col-md-5 column">
      @Html.DropDownList("FlavorId", "Select")<br>
      <br>    
      <input type="submit" value="Save" /><br>
    </div>
  </div>
}
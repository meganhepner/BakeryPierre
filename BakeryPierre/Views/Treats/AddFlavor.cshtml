@model BakeryPierre.Models.Treat

@{
  Layout = "_Layout";
}

<h2>Add a Flavor</h2>

<h4>Add a flavor profile to this treat: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" />
}